{
  "name": "electron-starter",
  "type": "module",
  "version": "0.0.0",
  "description": "An Electron application with React and TypeScript",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "main": "./out/main/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck:node": "tsgo --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsgo --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "bun run typecheck:node && bun run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "bump": "bumpp -y -q",
    "build": "bun run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "prepare": "[ \"$CI\" = \"true\" ] || lefthook install",
    "build:unpack": "bun run build && electron-builder --dir",
    "build:win": "bun run build && electron-builder --win",
    "build:mac": "bun run build && electron-builder --mac",
    "build:linux": "bun run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.12",
    "@tanstack/react-query": "4",
    "@tanstack/react-router": "^1.131.28",
    "@trpc/client": "^10.45.2",
    "@trpc/react-query": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-conf": "^1.3.0",
    "electron-trpc": "1.0.0-alpha.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.542.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.3.7",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint-react/eslint-plugin": "^1.52.7",
    "@eslint/eslintrc": "^3.3.1",
    "@tanstack/router-devtools": "^1.131.28",
    "@tanstack/router-plugin": "^1.131.28",
    "@types/node": "^22.18.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "19.0.2",
    "@typescript/native-preview": "7.0.0-dev.20250828.1",
    "@vitejs/plugin-react": "^5.0.2",
    "bumpp": "^9.11.1",
    "electron": "^37.4.0",
    "electron-builder": "^25.1.8",
    "electron-log": "^5.4.3",
    "electron-vite": "^4.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "lefthook": "^1.12.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vite": "npm:rolldown-vite@latest"
  },
  "trustedDependencies": [
    "lefthook"
  ]
}
